{
  "name": "My Whisk Helper",
  "description": "Helper extension to send prompts from popup to Google Labs Whisk.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "downloads"],
  "host_permissions": [
    "https://labs.google/*",
    "https://labs.google/*/tools/whisk/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "My Whisk Helper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://labs.google/*/tools/whisk",
        "https://labs.google/*/tools/whisk*"
      ],
      "js": ["content-whisk.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:3000/*", "https://localhost:3000/*"],
      "js": ["content-app.js"]
    }
  ]
}
